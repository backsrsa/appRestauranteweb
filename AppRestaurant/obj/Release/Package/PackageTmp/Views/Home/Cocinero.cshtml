@{
    ViewBag.Title = "Cocineros";
}
  
<div data-ng-controller="cocineroController" class="container">
    <div class="row">
        <div class="col-md-12">
            <strong class="error">{{ error }}</strong>
            <br />
            <p data-ng-hide="addMode"><a data-ng-click="toggleAdd()" href="javascript:;" class="btn btn-primary">Nuevo cocinero</a></p>
            <form name="addCustomer" data-ng-show="addMode" style="width:600px;margin:0px auto;">
                 
                <div class="form-group">
                    <label for="cname" class="col-sm-2 control-label">Nombres:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="cname" placeholder="Nombres" data-ng-model="newcustomer.Nombres" required />
                    </div>
                </div>
                <div class="form-group">
                    <label for="address" class="col-sm-2 control-label">Apellidos:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="apellido" placeholder="Apellidos" data-ng-model="newcustomer.Apellidos" required />
                    </div>
                </div>               

                <br />
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <input type="submit" value="Guardar" data-ng-click="add()" data-ng-disabled="!addCustomer.$valid" class="btn btn-primary" />
                        <input type="button" value="Cancelar" data-ng-click="toggleAdd()" class="btn btn-primary" />
                    </div>
                </div>
                <br />
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <br />
            <br />
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" style="width:800px">
                    <tr>
                        <th>#</th>
                        <td>Nombres </td>
                        <th>Apellidos </th>                       
                        <th>Opciones</th>
                    </tr>
                    <tr data-ng-repeat="cocinero in cocinero">
                        <td><strong data-ng-hide="cocinero.editMode">{{ cocinero.IdCocinero }}</strong></td>
                        <td>
                            <p data-ng-hide="cocinero.editMode">{{ cocinero.Nombres }}</p>
                            <input data-ng-show="cocinero.editMode" type="text" data-ng-model="cocinero.Nombres" />
                        </td>
                        <td>
                            <p data-ng-hide="cocinero.editMode">{{ cocinero.Apellidos }}</p>
                            <input data-ng-show="cocinero.editMode" type="text" data-ng-model="cocinero.Apellidos" />
                        </td>
                        

                        <td>
                            <p data-ng-hide="cocinero.editMode"><a data-ng-click="toggleEdit(cocinero)" href="javascript:;" class="btn btn-success" >Editar</a> | <a data-ng-click="deletecustomer(cocinero)" href="javascript:;"  class="btn btn-danger">Eliminar</a></p>
                            <p data-ng-show="cocinero.editMode"><a data-ng-click="save(cocinero)" href="javascript:;" class="btn btn-primary">Guardar</a> | <a data-ng-click="toggleEdit(camarero)" href="javascript:;" class="btn btn-danger">Cancelar</a></p>
                        </td>
                    </tr>
                </table>
                <hr />
            </div>
        </div>
    </div>
    <div id="mydiv" data-ng-show="loading">
        <img src="../Images/ajax-loader.gif" class="ajax-loader" />
    </div>
</div>